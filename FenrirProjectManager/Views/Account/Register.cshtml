@model FenrirProjectManager.Models.RegisterViewModel
    <div class="row center">
        <div class="col l12 m12 s12">
            <h1 class="header green-text">REGISTER</h1>
            <div class="row">
                <h5 class="header light">
                    Create a new account.
                </h5>
                <div class="col offset-l4 l4 m4 s12">
                    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "", role = "form" }))
                    {
                        @Html.AntiForgeryToken()

                        @Html.ValidationSummary("", new { @class = "red-text text-danger" })

                        <div class="input-field col l12 m12 s12">
                            @Html.TextBoxFor(m => m.Email, new {@class = "validate"})
                            @Html.LabelFor(m => m.Email)
                        </div>

                        <div class="input-field col l12 m12 s12">
                            @Html.PasswordFor(m => m.Password, new { @class = "validate" })
                            @Html.LabelFor(m => m.Password)
                        </div>
                        <div class="input-field col l12 m12 s12">
                            @Html.PasswordFor(m => m.ConfirmPassword, new {@class = "validate"})
                            @Html.LabelFor(m => m.ConfirmPassword)
                        </div>

                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <button class="btn blue lighten-1 waves-effect waves-light" type="submit" name="action">
                                    Register
                                    <i class="mdi-content-send right"></i>
                                </button>
                            </div>
                        </div>
                    }
                </div>

            </div>
            <br><br>
        </div>
    </div>



