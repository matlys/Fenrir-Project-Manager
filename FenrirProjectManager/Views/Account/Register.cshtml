@model FenrirProjectManager.Models.RegisterViewModel
<div class="row center">
    <div class="col offset-l3 l6 m12 s12 card" style="padding: 0 20px 10px 20px; background: rgba(0, 0, 0, 0.24); z-index: 2;">
        <div class="card-content">

            <h1>REGISTER</h1>

            @using (Html.BeginForm("Register", "Account", FormMethod.Post, new {@class = "", role = "form"}))
            {
                @Html.AntiForgeryToken()

                @Html.ValidationSummary("", new {@class = "red-text text-danger"})

                <div class="input-field col l12 m12 s12">
                    @Html.TextBoxFor(m => m.ProjectName)
                    @Html.LabelFor(m => m.ProjectName)
                </div>

                <div class="input-field col l12 m12 s12">
                    @Html.TextBoxFor(m => m.FirstName)
                    @Html.LabelFor(m => m.FirstName)
                </div>

                <div class="input-field col l12 m12 s12">
                    @Html.TextBoxFor(m => m.LastName)
                    @Html.LabelFor(m => m.LastName)
                </div>

                <div class="input-field col l12 m12 s12">
                    @Html.TextBoxFor(m => m.Email)
                    @Html.LabelFor(m => m.Email)
                </div>

                <div class="input-field col l12 m12 s12">
                    @Html.PasswordFor(m => m.Password)
                    @Html.LabelFor(m => m.Password)
                </div>
                <div class="input-field col l12 m12 s12" style="padding-bottom: 30px;">
                    @Html.PasswordFor(m => m.ConfirmPassword)
                    @Html.LabelFor(m => m.ConfirmPassword)
                </div>


                <div class="card-action center">
                    <button class="btn blue lighten-1 waves-effect waves-light" type="submit" name="action">Register</button>
                </div>
            }

        </div>
    </div>
</div>
