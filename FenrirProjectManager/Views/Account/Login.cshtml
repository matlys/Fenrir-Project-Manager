@using Model.Views
@model LoginViewModel
<div class="row center">
    <div class="col l12 m12 s12">
        <h1 class="header green-text">LOG IN</h1>
        <div class="row">
            <h5 class="header light">
                Log in to your account.
            </h5>
            <div class="col offset-l4 l4 m4 s12">
                @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    @Html.AntiForgeryToken()

                    @Html.ValidationSummary("", new { @class = "red-text text-danger" })

                    <div class="input-field col l12 m12 s12">
                        @Html.TextBoxFor(m => m.Email, new { @class = "validate" })
                        @Html.LabelFor(m => m.Email)
                    </div>

                    <div class="input-field col l12 m12 s12">
                        @Html.PasswordFor(m => m.Password, new { @class = "validate" })
                        @Html.LabelFor(m => m.Password)
                    </div>
                    <div class="input-field col l12 m12 s12">
                        @Html.CheckBoxFor(m => m.RememberMe)
                        @Html.LabelFor(m => m.RememberMe)
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <button class="btn blue lighten-1 waves-effect waves-light" type="submit" name="action">
                                Log in
                                <i class="mdi-content-send right"></i>
                            </button>
                        </div>
                    </div>
                    <p>
                        @Html.ActionLink("Register as a new user", "Register")
                    </p>
                }

            </div>
        </div>
    </div>
</div>
