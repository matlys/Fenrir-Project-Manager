@using Model.Views
@model LoginViewModel
<div class="row center">
    <div class="col offset-l3 l6 m12 s12 card" style="padding: 0 20px 10px 20px; background: rgba(0, 0, 0, 0.24); z-index: 2;">
        <div class="card-content">

            <h1 class>LOGIN</h1>

            @using (Html.BeginForm("Login", "Account", new { ViewBag.ReturnUrl }, FormMethod.Post))
            {
            @Html.AntiForgeryToken()

            <div class="input-field col l12 m12 s12">
                @Html.TextBoxFor(m => m.Email)
                @Html.LabelFor(m => m.Email)
            </div>

            <div class="input-field col l12 m12 s12">
                @Html.PasswordFor(m => m.Password, new { @style = "blue" })
                @Html.LabelFor(m => m.Password)
            </div>
            <div class="row col l12 m12 s12 left-align" style="padding-bottom: 30px;">

                @Html.TextBoxFor(m => m.RememberMe, new { @type = "checkbox" })
                @Html.LabelFor(m => m.RememberMe)
            </div>

            <div class="card-action center">
                <a class="btn brown darken-3 waves-effect waves-light" style="color: #FFF !important;" href="@Url.Action(MVC.Account.Register())">Register</a>
                <button class="btn blue lighten-1 waves-effect waves-light" type="submit" name="action">Login</button>
            </div>
            }

        </div>
    </div>
</div>
